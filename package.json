  "scripts": {
    "tsc": "tsc",
    "styleguidist": "styleguidist",
    "old:dev": "tsc && styleguidist server",
    "old:start": "tsc && styleguidist server",
    "dev": "start-storybook",
    "start": "start-storybook",
    "release": "./scripts/release.sh",
    "css:build": "./scripts/build-css.sh",
    "new": "./scripts/new-component.sh",
    "test": "jest",
    "styleguidist:build": "styleguidist build && yarn run test",
    "styleguidist:publish": "yarn && yarn run styleguidist:build && pm2 reload cat-ui-styleguidist",
    "styleguidist:start": "NODE_ENV=test pm2 start ./server.js --name=cat-ui-styleguidist",
    "styleguidist:stop": "pm2 stop cat-ui-styleguidist",
    "storybook:build": "yarn run test && yarn run build:storybook",
    "storybook:start": "NODE_ENV=test pm2 start ./server.js --name=cat-ui-storybook",
    "storybook:stop": "pm2 stop cat-ui-storybook",
    "storybook:publish": "yarn && yarn run storybook:build && yarn run storybook:start",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "npm run lint -- --fix ",
    "prettier:base": "prettier --parser typescript --single-quote --trailing-comma none",
    "prettier:check": "npm run prettier:base -- -l \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "update:icon": "node ./scripts/updateIcon/index.js --inspect --code=xgsazuemfwn",
    "build:css": "sass --color --no-source-map src/styles:styles",
    "build:ts": "tsc --build",
    "update:snapshot": "jest --updateSnapshot",
    "build": "npm run test && rm -rf lib styles && npm run build:ts && npm run build:css",
    "deploy:gitpage": "storybook-to-ghpages -o storybook",
    "publish": "npm run build && node ./scripts/update-version.js"
  },
