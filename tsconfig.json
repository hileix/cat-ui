{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "dom"],
    "noImplicitAny": false,
    "removeComments": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "src/components/**/__test__"]
}
